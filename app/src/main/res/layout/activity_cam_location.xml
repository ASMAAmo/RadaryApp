<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rel_select_location"
        android:layout_below="@+id/relback"
        tools:context="com.slashapps.radary.Activities.CamLocationActivity" />

    <com.andexert.library.RippleView
        android:id="@+id/rel_select_location"
        rv_centered="false"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="false"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:background="@drawable/border_shapyellow"
        android:padding="10dp">

        <ConstantClasss.Custom_Textview
            android:id="@+id/txt_ogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="10dp"
            android:text="@string/select_cam_location"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:textStyle="bold" />
    </com.andexert.library.RippleView>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_location_searching_black_24dp" />

</FrameLayout>


