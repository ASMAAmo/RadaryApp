<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/place_layout"
    android:layout_width="wrap_content"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/place_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/placesname"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="false"
        android:padding="5dp"
        app:srcCompat="@drawable/place_ico" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/place_name_tv"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/lat_long_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toStartOf="@+id/place_name_tv"
        android:gravity="fill_vertical"
        android:text="30.25558 , 31,5588"
        android:textAlignment="viewStart"
        android:textSize="13sp" />
</RelativeLayout>