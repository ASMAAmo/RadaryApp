<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/place_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_alignParentTop="true"
    android:id="@+id/relall"
    android:layout_width="wrap_content"
    android:layout_height="50dp">


    <TextView
        android:id="@+id/place_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/status"
        android:layout_alignBottom="@+id/status"
        android:layout_toStartOf="@+id/status"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/placesname"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="false"
        android:padding="5dp"
        app:srcCompat="@drawable/place_ico" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/place_name_tv"
        android:background="@color/grey"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/lat_long_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toStartOf="@+id/place_name_tv"
        android:gravity="fill_vertical"
        android:text="30.25558 , 31,5588"
        android:layout_centerVertical="true"
        android:textAlignment="viewStart"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lat_long_tv"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/lat_long_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="3dp"
        android:text="TextView"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

</RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_below="@+id/relall"
        android:layout_height="1dp" />
</RelativeLayout>